{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    {% if not is_granted('ROLE_ELECTRICIAN') or not is_granted('ROLE_MANAGER') %}

    <p>You are not allowed to access this page. Sorry!</p>

    {% else %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Location</th>
                <th>JobType</th>
                <th>FileName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.location }}</td>
                <td>{{ job.jobType }}</td>
                <td>{{ job.fileName }}</td>
                <td>
                    <a href="{{ path('app_job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('app_job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_new') }}">Create new</a>
    {% endif %}
{% endblock %}
