{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ELECTRICIAN') or is_granted('ROLE_MANAGER') or is_granted('ROLE_ADMIN') %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ job.location }}</td>
            </tr>
            <tr>
                <th>JobType</th>
                <td>{{ job.jobType }}</td>
            </tr>
            <tr>
                <th>FileName</th>
                <td>{{ job.fileName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_job_index') }}">back to list</a>

    <a href="{{ path('app_job_edit', {'id': job.id}) }}">edit</a>

    {{ include('job/_delete_form.html.twig') }}
    {% else %}
    <p>You do not have access to this page. Sorry!</p>

{% endblock %}
