{% extends 'base.html.twig' %}

{% block title %}Electrician index{% endblock %}

{% block body %}
    <h1>Electrician index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Password</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for electrician in electricians %}
            <tr>
                <td>{{ electrician.id }}</td>
                <td>{{ electrician.name }}</td>
                <td>{{ electrician.password }}</td>
                <td>{{ electrician.email }}</td>
                <td>
                    <a href="{{ path('app_electrician_show', {'id': electrician.id}) }}">show</a>
                    <a href="{{ path('app_electrician_edit', {'id': electrician.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_electrician_new') }}">Create new</a>
{% endblock %}
